{
    "name": "Elden Leetcode",
    "description": "Elden Ring experience for Leetcode (inspired by Elden GitHub from @SaltyAom)",
    "version": "1.0",
    "manifest_version": 3,

    "action": {
        "default_icon": {
            "16": "assets/elden-leetcode-16.png",
            "24": "assets/elden-leetcode-24.png",
            "32": "assets/elden-leetcode-128.png"
        },
        "default_title": "Elden Leetcode",
        "default_popup": "popup.html"
    },

    "icons": {
        "16": "assets/elden-leetcode-16.png",
        "48": "assets/elden-leetcode-48.png",
        "128": "assets/elden-leetcode-128.png"
    },

    "permissions": ["tabs", "storage", "webNavigation"],

    "host_permissions": ["https://leetcode.com/*", "https://*.leetcode.com/*"],

    "background": {
        "service_worker": "background.js"
    },

    "content_scripts": [
        {
            "matches": ["https://leetcode.com/*", "https://*.leetcode.com/*"],
            "js": ["content.js"],
            "run_at": "document_end"
        }
    ],

    "web_accessible_resources": [
        {
            "resources": ["banners/*", "sounds/*", "assets/*"],
            "matches": ["https://leetcode.com/*", "https://*.leetcode.com/*"]
        }
    ]
}
